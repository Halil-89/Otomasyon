@model IEnumerable<SatisHareket>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
 
<h1>Satış Listesi</h1>

<!DOCTYPE html>
<html lang="tr">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <td>Id</td>
            <td>Ürün</td>
            <td>Cari</td>
            <td>Personel</td>
            <td>Adet</td>
            <td>Fiyat</td>
            <td>Toplam</td>
            <td>Tarih</td>
           <td>Güncelle</td>
            <td>Detaylar</td>
        </tr>
    </thead>
     <tbody>
   

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SatisId</td>
                <td>@item.Urun.UrunAd</td>
                <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat</td>
                <td>@item.ToplamTutar</td>
                <td>@item.Tarih</td>

                <td>
                    <a class="btn btn-success" asp-controller="Satis" asp-action="Güncelle" asp-route-id=@item.SatisId>Güncelle</a>
                </td>
            
                <td>
                    <a class="btn btn-warning" asp-controller="Satis" asp-action="Detay" asp-route-id=@item.SatisId> Detaylar</a>
                </td>
            </tr>


        }
        </tbody>
   

</table>

<a asp-controller="Satis" asp-action="SatisYap" class="btn btn-primary"> Yeni Satış</a>

</html>




<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>





  <script type="text/javascript">
      $(document).ready(function () {
          $('#tbl1').DataTable({

              "language": {
                  "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
              }
          });
      });
  </script>



