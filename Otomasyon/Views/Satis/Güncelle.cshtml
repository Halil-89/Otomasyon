@model SatisHareket
@{
    ViewData["Title"] = "Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Ürün Güncelleme Sayfası</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<h2>Ürün Güncelleme Sayfası</h2>
<br />
<body>

    <form class="form-control" method="post">

        <input type="hidden" asp-for="SatisId" class="form-control" />

        <label asp-for="UrunId">Urun Adı</label>
        <select class="form-control" asp-for="UrunId"
                asp-items="(IEnumerable<SelectListItem>)ViewBag.urun">
            <option value="">Seçiniz</option>
            <span asp-validation-for="@Model.UrunId" class="text-danger"></span>

        </select>
        <label asp-for="CariId">Cari Adı</label>
        <select class="form-control" asp-for="CariId"
                asp-items="(IEnumerable<SelectListItem>)ViewBag.cari">
            <option value="">Seçiniz</option>
            <span asp-validation-for="@Model.CariId" class="text-danger"></span>

        </select>
        <label asp-for="PersonelId">Personel Adı</label>
        <select class="form-control" asp-for="PersonelId"
                asp-items="(IEnumerable<SelectListItem>)ViewBag.personel">
            <option value="">Seçiniz</option>
            <span asp-validation-for="@Model.PersonelId" class="text-danger"></span>

        </select>

      

        <label asp-for="Adet">Adet</label>
        <input type="text" asp-for="Adet" class="form-control" />
        <span asp-validation-for="@Model.Adet" class="text-danger"></span>

        <label asp-for="Fiyat">Fiyat</label>
        <input type="text" asp-for="Fiyat" class="form-control" />
        <span asp-validation-for="@Model.Fiyat" class="text-danger"></span>

        <label asp-for="ToplamTutar">Tutar</label>
        <input type="text" asp-for="ToplamTutar" class="form-control" />
        <span asp-validation-for="@Model.ToplamTutar" class="text-danger"></span>

        <label asp-for="Tarih">Tutar</label>
        <input type="text" asp-for="Tarih" class="form-control" />
        <span asp-validation-for="@Model.Tarih" class="text-danger"></span>
       

       

        <br />
        <button class="btn btn-success">Kaydet</button>

    </form>
</body>
</html>
