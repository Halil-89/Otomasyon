@model IEnumerable<Departman>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>

<table class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
          @*  <td>Id</td>*@
            <td>Departman Adı</td>
            <td>Güncelle</td>
            <td>Sil</td>
            <td>Detaylar</td>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
              @*  <td>@item.DepartmanId</td>*@
                <td>@item.DeparmanAd</td>
                <td>
                    <a class="btn btn-success" asp-controller="Departman" asp-action="Güncelle" asp-route-id=@item.DepartmanId>Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Departman" asp-action="Sil" asp-route-id=@item.DepartmanId> Sil</a>
                </td>
                <td>
                    <a class="btn btn-info" asp-controller="Departman" asp-action="Detay" asp-route-id=@item.DepartmanId> Detay</a>
                </td>
            </tr>



        }

    </tbody>

</table>
<a asp-controller="Departman" asp-action="Ekle" class="btn btn-primary"> Yeni Departman</a>

</html>

