@model IEnumerable<Personel>
@{
    ViewData["Title"] = "Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Departman Detay Sayfası </h1>

<!DOCTYPE html>
<html lang="tr">
<head>
    <title> </title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<body>
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active"> Departman Adı: @ViewBag.departman</li>
    </ol>

    <table class="table table-hover">
        <tr>
           @* <td>Personel Id</td>*@
            <td>Personel</td>
           @* <td>Soyadı</td>*@
            @*<td>Görsel</td>*@
            <td>Satışlar</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
               @* <td>@item.PersonelId</td>*@
                <td>@item.PersonelAd @item.PersonelSoyad</td>
                @*<td>@item.PersonelSoyad</td>*@
                @*<td>@item.PersonelGorsel</td>*@
                <td>
                    <a class="btn btn-info" asp-controller="Departman" asp-action="PersonelSatıs" asp-route-id=@item.PersonelId> Satışlar</a>
                </td>

            </tr>

        }
    </table>

</body>
</html>

