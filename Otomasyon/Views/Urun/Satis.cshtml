@model SatisHareket

@{
    ViewData["Title"] = "Satis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Yeni Kategori Sayfası</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<h2>Yeni Satış Sayfası</h2>
<br />
<body>

    <form class="form-control" method="post">
        <label asp-for="UrunId">Urun Id</label>
        <input type="text" asp-for="UrunId" value="@ViewBag.urun" class="form-control" readonly />
        <span asp-validation-for="@Model.UrunId" class="text-danger"></span>

        <label asp-for="PersonelId">Personel Adı</label>
        <select class="form-control" asp-for="PersonelId"
                asp-items="(IEnumerable<SelectListItem>)ViewBag.personel">
            <option value="">Seçiniz</option>
            <span asp-validation-for="@Model.PersonelId" class="text-danger"></span>

        </select>

        <label asp-for="CariId">Cari Id</label>
        <input type="number" asp-for="CariId" class="form-control" />
        <span asp-validation-for="@Model.CariId" class="text-danger"></span>

        <label asp-for="Adet">Adet</label>
        <input type="text" asp-for="Adet" class="form-control" min="1" max="10" id="adet" onchange="sum();" />
        <span asp-validation-for="@Model.Adet" class="text-danger"></span>

        <label asp-for="Fiyat">Fiyat</label>
        <input type="text" asp-for="Fiyat" value="@ViewBag.fiyat" class="form-control" id="fiyat" onkeyup="sum();" />
        <span asp-validation-for="@Model.Fiyat" class="text-danger"></span>

        <label asp-for="ToplamTutar">Toplam Tutar</label>
        <input type="text" asp-for="ToplamTutar" class="form-control" readonly  id="tutar" />
        <span asp-validation-for="@Model.ToplamTutar" class="text-danger"></span>

       

        <br />
        <button class="btn btn-success">Satış Yap</button>

    </form>
</body>
</html>


<script src="~/lib/jquery/dist/jquery.min.js"></script>


<script>
    function sum() {

        var adet = $('#adet').val();
        var fiyat = $('#fiyat').val();
        var sonuc = parseInt(adet) * parseInt(fiyat);
        console.log(adet);
        console.log(fiyat);
        console.log(sonuc);
        $('#tutar').val(sonuc);
  
    }
</script>



