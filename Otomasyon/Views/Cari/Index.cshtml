@model IEnumerable<Cari>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Cari Listesi</h1>

<!DOCTYPE html>
<html lang="en">
<head>
<title></title>
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<table class="table table-bordered" style="margin-top:20px">
<thead>
    <tr>
       @* <td>Id</td>*@
        <td>Adı</td>
        <td>Soyadı</td>
        <td>Şehir</td>
        <td>Mail</td>
        <td>Güncelle</td>
         <td>Sil</td>
         <td>Satış Geçmişi</td>
        


    </tr>
</thead>
<tbody>

    @foreach (var item in Model)
    {
        <tr>
           @* <td>@item.CariId</td>*@
            <td>@item.CariAd</td>
            <td>@item.CariSoyad</td>
            <td>@item.CariSehir</td>
            <td>@item.CariMail</td>
           
            <td>
                <a class="btn btn-success" asp-controller="Cari" asp-action="Güncelle" asp-route-id=@item.CariId>Güncelle</a>
            </td>
            <td>
                <a class="btn btn-danger" asp-controller="Cari" asp-action="Sil" asp-route-id=@item.CariId> Sil</a>
            </td>
                <td>
                    <a class="btn btn-warning" asp-controller="Cari" asp-action="Gecmis" asp-route-id=@item.CariId> Satış Geçmişi</a>
                </td>
        </tr>



    }

</tbody>

</table>

<a asp-controller="Cari" asp-action="Ekle" class="btn btn-primary"> Yeni Cari</a>
</html>

