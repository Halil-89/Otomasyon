@using X.PagedList;
@using X.PagedList.Mvc.Core
@model PagedList<Kategori>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>

<table class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <td>Id</td>
            <td>Kategori Adı</td>
            <td>Güncelle</td>
            <td>Sil</td>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KategoriId</td>
                <td>@item.KategoriAd</td>
                <td>
                    <a class="btn btn-success" asp-controller="Kategori" asp-action="Güncelle" asp-route-id=@item.KategoriId>Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Kategori" asp-action="Sil" asp-route-id=@item.KategoriId> Sil</a>
                </td>
            </tr>



        }

    </tbody>

</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a asp-controller="Kategori" asp-action="Ekle" class="btn btn-primary"> Yeni Kategori</a>

</div>


</html>